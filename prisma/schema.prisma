generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                      String                   @id @default(uuid())
  email                   String                   @unique
  name                    String?
  role                    Role                     @default(USER)
  preferred_currency      String                   @default("INR")
  cartItems               CartItem[]
  products                Product[]
  wishlistItems           WishlistItem[]
  userAddresses           UserAddress[]
  orders                  Order[]
  productReviews          ProductReview[]
  searchQueries           SearchQuery[]
  productViews            ProductView[]
  userProductInteractions UserProductInteraction[]
}

model Category {
  categoryId      Int           @id @default(autoincrement()) @map("category_id")
  categoryName    String        @unique @map("category_name") @db.VarChar(100)
  categoryPath    String?       @map("category_path") @db.VarChar(500)
  description     String?
  imageUrl        String?       @map("image_url") @db.VarChar(500)
  metaTitle       String?       @map("meta_title") @db.VarChar(255)
  metaDescription String?       @map("meta_description")
  metaKeywords    String?       @map("meta_keywords")
  createdAt       DateTime      @default(now()) @map("created_at")
  updatedAt       DateTime      @updatedAt @map("updated_at")
  products        Product[]
  productViews    ProductView[]
}

model Brand {
  brandId   String    @id @default(uuid()) @map("brand_id")
  brandName String    @unique @map("brand_name") @db.VarChar(100)
  createdAt DateTime  @default(now()) @map("created_at")
  products  Product[]

  @@map("brands")
}

model Product {
  productId               String                   @id @default(uuid()) @map("product_id")
  by                      String?
  productName             String                   @map("product_name") @db.VarChar(255)
  description             String?
  brandId                 String?                  @map("brand_id")
  categoryId              Int?                     @map("category_id")
  price                   Decimal                  @db.Decimal(10, 2)
  compareAtPrice          Decimal?                 @map("compare_at_price") @db.Decimal(10, 2)
  cost                    Decimal?                 @db.Decimal(10, 2)
  currency                String                   @default("INR") @db.VarChar(3)
  stockQuantity           Int                      @default(0) @map("stock_quantity")
  tags                    String[]
  viewCount               Int                      @default(0) @map("view_count")
  purchaseCount           Int                      @default(0) @map("purchase_count")
  reviewCount             Int                      @default(0) @map("review_count")
  createdAt               DateTime                 @default(now()) @map("created_at")
  updatedAt               DateTime                 @updatedAt @map("updated_at")
  images                  String[]
  cartItems               CartItem[]
  brand                   Brand?                   @relation(fields: [brandId], references: [brandId])
  uploadedBy              User?                    @relation(fields: [by], references: [id])
  category                Category?                @relation(fields: [categoryId], references: [categoryId])
  wishlistItems           WishlistItem[]
  orderItems              OrderItem[]
  productReviews          ProductReview[]
  searchQueries           SearchQuery[]
  searchQueryProducts     SearchQueryProduct[]
  productViews            ProductView[]
  userProductInteractions UserProductInteraction[]
}

model CartItem {
  cartItemId BigInt   @id @default(autoincrement())
  userId     String
  productId  String
  quantity   Int      @default(1)
  addedAt    DateTime @default(now())
  product    Product  @relation(fields: [productId], references: [productId], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
}

model WishlistItem {
  wishlistId BigInt   @id @default(autoincrement())
  userId     String
  productId  String
  addedAt    DateTime @default(now())
  product    Product  @relation(fields: [productId], references: [productId], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
}

enum Role {
  USER
  DEALER
  ADMIN
}

enum ProductStatus {
  active
  inactive
  draft
  archived
}

enum ProductVisibility {
  visible
  hidden
  catalog
  search
}

model UserAddress {
  address_id    BigInt  @id @default(autoincrement())
  user_id       String
  name          String
  user          User    @relation(fields: [user_id], references: [id], onDelete: Cascade)
  address_line1 String
  address_line2 String?
  city          String
  state         String
  pincode       String

  last_used  DateTime @default(now())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  orders     Order[]

  @@index([user_id], name: "idx_user_addresses_user")
  @@map("user_addresses")
}

enum OrderStatus {
  pending
  processing
  confirmed
  shipped
  delivered
  cancelled
  refunded
  failed
}

enum PaymentStatus {
  pending
  processing
  paid
  partial
  failed
  refunded
}

// ---------- MODELS ----------

model Order {
  order_id String @id @default(uuid())
  user_id  String
  user     User   @relation(fields: [user_id], references: [id], onDelete: Restrict)

  status         OrderStatus   @default(pending)
  payment_status PaymentStatus @default(pending)

  subtotal        Decimal @db.Decimal(10, 2)
  tax_amount      Decimal @default(0) @db.Decimal(10, 2)
  shipping_amount Decimal @default(0) @db.Decimal(10, 2)
  discount_amount Decimal @default(0) @db.Decimal(10, 2)
  total_amount    Decimal @db.Decimal(10, 2)

  currency       String  @default("INR") @db.VarChar(3)
  payment_method String? @db.VarChar(50)

  shipping_address_id BigInt?
  shippingAddress     UserAddress? @relation(fields: [shipping_address_id], references: [address_id])

  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt
  shipped_at   DateTime?
  delivered_at DateTime?

  items          OrderItem[]
  productReviews ProductReview[]

  @@index([user_id], name: "idx_orders_user")
  @@index([status], name: "idx_orders_status")
  @@index([created_at], name: "idx_orders_created")
}

model OrderItem {
  order_item_id BigInt @id @default(autoincrement())

  order_id String
  order    Order  @relation(fields: [order_id], references: [order_id], onDelete: Cascade)

  product_id String
  product    Product @relation(fields: [product_id], references: [productId], onDelete: Restrict)

  product_name    String  @db.VarChar(255)
  quantity        Int
  price           Decimal @db.Decimal(10, 2)
  discount_amount Decimal @default(0) @db.Decimal(10, 2)
  tax_amount      Decimal @default(0) @db.Decimal(10, 2)
  total_amount    Decimal @db.Decimal(10, 2)

  fulfillment_status String? @default("pending") @db.VarChar(50)
  returned_quantity  Int     @default(0)
  refunded_amount    Decimal @default(0) @db.Decimal(10, 2)

  @@index([order_id], name: "idx_order_items_order")
  @@index([product_id], name: "idx_order_items_product")
}

model ProductReview {
  review_id String @id @default(uuid())

  product_id String
  user_id    String

  rating      Int
  title       String?
  review_text String?

  helpful_count     Int @default(0)
  not_helpful_count Int @default(0)

  created_at DateTime @default(now()) @db.Timestamptz(6)
  updated_at DateTime @updatedAt @db.Timestamptz(6)

  // Relations
  product       Product @relation(fields: [product_id], references: [productId], onDelete: Cascade)
  user          User    @relation(fields: [user_id], references: [id], onDelete: Cascade)
  order         Order?  @relation(fields: [orderOrder_id], references: [order_id])
  orderOrder_id String?

  @@unique([product_id, user_id])
}

model SearchQueryProduct {
  id BigInt @id @default(autoincrement())

  productId String @map("product_id")

  product Product @relation(fields: [productId], references: [productId])

  createdAt     DateTime     @default(now()) @map("created_at")
  searchQuery   SearchQuery? @relation(fields: [searchQueryId], references: [queryId])
  searchQueryId BigInt?

  @@index([productId], name: "idx_sqp_product")
  @@map("search_query_products")
}

model SearchQuery {
  queryId BigInt  @id @default(autoincrement()) @map("query_id")
  userId  String? @map("user_id")
  user    User?   @relation(fields: [userId], references: [id], onDelete: Cascade)

  searchQuery      String   @map("search_query")
  clickedProductId String?  @map("clicked_product_id")
  product          Product? @relation(fields: [clickedProductId], references: [productId])

  // NEW: relation to searched products (via join table)
  searchedProducts SearchQueryProduct[]

  createdAt DateTime @default(now()) @map("created_at")

  @@index([userId], name: "idx_search_user")
  @@index([searchQuery], name: "idx_search_query")
  @@index([createdAt], name: "idx_search_created")
  @@map("search_queries")
}

enum ViewSource {
  direct
  category
  search
  home
}

model ProductView {
  viewId              BigInt      @id @default(autoincrement()) @map("view_id")
  userId              String?     @map("user_id")
  productId           String      @map("product_id")
  viewedAt            DateTime    @default(now()) @map("viewed_at")
  viewDurationSeconds Int?        @map("view_duration_seconds")
  viewSource          ViewSource? @map("view_source")

  filterCategoryName String? @map("filter_category_id")

  // Relations
  user           User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  product        Product   @relation(fields: [productId], references: [productId], onDelete: Cascade)
  filterCategory Category? @relation(fields: [filterCategoryName], references: [categoryName], onDelete: Cascade)

  @@index([userId], name: "idx_product_views_user")
  @@index([productId], name: "idx_product_views_product")
  @@index([viewedAt], name: "idx_product_views_viewed")
  @@index([filterCategoryName], name: "idx_product_views_filter_category")
  @@map("product_views")
}

enum InteractionType {
  add_to_cart
  remove_from_cart
  add_to_wishlist
  remove_from_wishlist
  purchase
  review
}

model UserProductInteraction {
  interactionId    BigInt          @id @default(autoincrement()) @map("interaction_id")
  userId           String          @map("user_id")
  productId        String          @map("product_id")
  interactionType  InteractionType @map("interaction_type")
  createdAt        DateTime        @default(now()) @map("created_at")

  // Relations
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [productId], onDelete: Cascade)

  // Indexes
  @@index([userId], name: "idx_interactions_user")
  @@index([productId], name: "idx_interactions_product")
  @@index([interactionType], name: "idx_interactions_type")
  @@index([createdAt], name: "idx_interactions_created")
  @@index([userId, productId], name: "idx_interactions_user_product")
  @@map("user_product_interactions")
}
